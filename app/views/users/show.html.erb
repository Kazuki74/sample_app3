<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
        		<%= @user.name %>
			</h1>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="row">
			<div class="search_form">
				<%= render 'shared/microposts_search_form' %>
			</div>
		</div>
	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
		<% if @microposts.count == 0 %>
			<h3>Micropost(0)</h3>
			<p>
				Sorry, Couldn't find any microposts.</br>
				Please try another keywords.
			</p>
		<% else %>
			<h3>Microposts(<%= @microposts.count %>)</h3>
			<ol class="microposts">
					<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>